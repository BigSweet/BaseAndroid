<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cn.primedu.m.baseandroid.MainActivity">

    <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hello World!"/>-->

    <!-- <com.facebook.drawee.view.SimpleDraweeView
         android:id="@+id/user_adv"
         android:layout_width="@dimen/q200"
         android:layout_height="@dimen/q200"
         app:placeholderImageScaleType="fitXY"
        />
 -->

    <RelativeLayout
        android:id="@+id/csttopbanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/q270">


        <ImageView
            android:id="@+id/avater"
            android:layout_width="600px"
            android:layout_height="225px"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_avatar_bg2x" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="175px"
            android:id="@+id/user_adv"
            android:layout_height="175px"
            android:layout_alignParentRight="true"
            app:placeholderImage="@drawable/avatar_130"
            app:placeholderImageScaleType="fitCenter"
            app:roundAsCircle="true" />



        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/q100"
            android:layout_height="@dimen/q100"
            android:layout_marginLeft="@dimen/q30"
            android:layout_marginTop="@dimen/q50"
            android:src="@drawable/btn_back2x"
            android:visibility="gone"
            tools:visibility="visible" />



        <TextView
            android:id="@+id/main_name"
            android:singleLine="true"
            android:layout_width="@dimen/q270"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/q240"
            android:layout_marginTop="@dimen/q55"
            android:text="未登录"
            android:textColor="@color/white" />

        <TextView
            android:textSize="11sp"
            android:id="@+id/main_segment"
            android:gravity="center"
            android:layout_width="@dimen/q220"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/q250"
            android:layout_marginTop="@dimen/q148"
            android:text="火力碎片: 0"
            android:textColor="@color/white" />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refersh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


</com.zhy.autolayout.AutoLinearLayout>
